@model IEnumerable<Account>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Account";
}
<a asp-controller="Account" asp-action="Create" class="btn btn-primary">Add New Acount</a>
<table class="table">
    <thead>
        <tr>
           
            <th>Name</th>
            <th>Notes</th>
            <th>InitialBudget</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Account_Name</td>
                <td>@item.Account_Notes</td>
                <td>@item.Initial_Budget</td>
                <td>
                    <a href="/Account/Edit/@item.Account_Id"> Edit </a>|
                    <a href="/Account/Detail/@item.Account_Id">Details</a>|
                    <a href="/Account/Delete/@item.Account_Id">Delete </a>|
                </td>
            </tr>
        }
    </tbody>
</table>

